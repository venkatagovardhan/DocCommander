<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/app_primary</item>
        <item name="colorPrimaryDark">@color/app_primary_dark</item>
        <item name="colorAccent">@color/material_deep_orange_700</item>
        <item name="android:actionBarStyle">@style/actionbarStyle</item>
        <item name="android:actionModeBackground">@color/accent_color</item>
        <item name="android:windowBackground">@color/color_window_background</item>
        <item name="android:fastScrollThumbDrawable">@drawable/fast_scroll_handle</item>
        <item name="android:fastScrollTrackDrawable">@drawable/fast_scroll_track</item>
    </style>
